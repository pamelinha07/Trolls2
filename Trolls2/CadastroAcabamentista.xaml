    <ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trolls2.CadastroAcabamentista"
             BackgroundColor="{StaticResource BackgroundColor}">

    <VerticalStackLayout Spacing="20">
        <Label Text="Cadastro da(o) Acabamentista" FontSize="Large" HorizontalTextAlignment="Center" />

        <Label Text="Nome" />
        <Entry Placeholder="Digite o nome do acabamentista" />

        <Label Text="Telefone" />
        <Entry Placeholder="Digite o telefone" Keyboard="Telephone" />

        <HorizontalStackLayout Spacing="20">
            <Button Text="Cancelar" 
            Clicked="OnCancelarButtonClicked"/>

            <Button Text="Salvar alterações"
            Clicked="OnSalvarAlteracoesButtonClicked" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
