<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trolls2.PersonalizesuaLogo"
             BackgroundColor="#F0F0F0">

    <VerticalStackLayout Spacing="20">
        <Label Text="Personalize sua Logo" FontSize="Large" HorizontalTextAlignment="Center" Padding="20"/>

        <Grid>
            <Image Source="paint_palette.png" HorizontalOptions="Center"/>
            <Label Text="Clique aqui para criar" HorizontalTextAlignment="Center" FontSize="Medium" Padding="10"/>
        </Grid>

        <Label Text="Envie seu modelo para nós !!" HorizontalTextAlignment="Center" FontSize="Medium" Padding="10"/>

        <Grid ColumnDefinitions="*, *" Padding="20">
            <Button Text="Voltar" Grid.Column="0" BackgroundColor="#6C757D" TextColor="White" CornerRadius="0"/>
            <Button Text="Próximo" Grid.Column="1" BackgroundColor="#6C757D" TextColor="White" CornerRadius="0"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>
