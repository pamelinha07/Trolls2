<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trolls2.CadastroCostureiro"
             BackgroundColor="{StaticResource BackgroundColor}">

    <VerticalStackLayout Spacing="20">
        <Label Text="Cadastro do Costureiro(a)" FontSize="Large" HorizontalTextAlignment="Center" />

        <Label Text="Nome" />
        <Entry Placeholder="Digite o nome do costureiro(a)" />

        <Label Text="Telefone" />
        <Entry Placeholder="Digite o telefone" Keyboard="Telephone" />

        <HorizontalStackLayout Spacing="20">
            <Button Text="Cancelar" />
            <Button Text="Salvar alterações" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
