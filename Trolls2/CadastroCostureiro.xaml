<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trolls2.CadastroCostureiro"
             BackgroundColor="#8fc1c2"
             Shell.NavBarIsVisible="False">

    <VerticalStackLayout Spacing="20">
        <Label Text="Cadastro do Costureiro(a)" 
        FontSize="Large" 
        HorizontalTextAlignment="Center" />

        <Label Text="Nome:" 
        Margin="20, 50, 20, 5"/>
        <Entry Placeholder="Digite o nome do costureiro(a)" />

        <Label Text="Telefone" />
        <Entry Placeholder="Digite o telefone" Keyboard="Telephone" />

        <HorizontalStackLayout Spacing="20">
            <Button Text="Cancelar" 
            Clicked="OnCancelarButtonClicked"/>
            <Button Text="Salvar alterações" 
            Clicked="OnSalvarAlteracoesButtonClicked"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
