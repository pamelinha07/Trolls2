<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trolls2.FinalizarPedido"
             BackgroundColor="#8fc1c2"
             Shell.NavBarIsVisible="False">

    <VerticalStackLayout Spacing="20">
        <Label Text="Finalizar Pedido" FontSize="Large" HorizontalTextAlignment="Center" />
        <Label Text="Salvar alterações?" HorizontalTextAlignment="Center" />
        <HorizontalStackLayout Spacing="20">
            <Button Text="Sim" 
            Clicked="OnSimButtonClicked"/>
            <Button Text="Não" 
            Clicked="OnNaoButtonClicked"/>
        </HorizontalStackLayout>
        <Label Text="Enviar Pedido" HorizontalTextAlignment="Center" />
        <Button Text="Voltar" HorizontalOptions="Center" 
        Clicked="OnVoltarButtonClicked"/>
        <Label Text="sewdreams.com.br" HorizontalTextAlignment="Center" FontSize="Small" />
    </VerticalStackLayout>
</ContentPage>
