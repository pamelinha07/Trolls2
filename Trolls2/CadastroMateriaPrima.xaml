<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trolls2.CadastroMateriaPrima"
             BackgroundColor="Blue">

    <VerticalStackLayout Spacing="20">
        <Label Text="Cadastro Matéria-Prima" FontSize="Large" HorizontalTextAlignment="Center" />

        <Label Text="Nome" />
        <Entry Placeholder="Digite o nome da matéria-prima" />

        <Label Text="Unidade de Medida" />
        <Picker Title="Selecione a unidade de medida">
            </Picker>

        <HorizontalStackLayout Spacing="20">
            <Button Text="Cancelar" 
            Clicked="OnCancelarButtonClicked"/>
            <Button Text="Salvar alterações" 
            Clicked="OnSalvarAlteracoesButtonClicked"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
