<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trolls2.MainPage"
             Title="SewDreams">

    <VerticalStackLayout Spacing="20" Padding="20">
        <Label Text="SewDreams" FontSize="Large" HorizontalTextAlignment="Center" />

        <Grid ColumnDefinitions=" *, *" RowDefinitions="*, *">
            <Button Text="Clientes" 
                    Grid.Column="0" 
                    Grid.Row="1"
                    Clicked="ClientesClicked"/> 

            <Button Text="Produtos" 
                    Grid.Column="1" 
                    Grid.Row="1"
                    Clicked="ProdutosClicked"/>

            

            <Button Text="Vendas" 
                    Grid.Column="1" 
                    Grid.Row="0"
                    Clicked="VendasClicked"/>
            

        </Grid>

    </VerticalStackLayout>
</ContentPage>
